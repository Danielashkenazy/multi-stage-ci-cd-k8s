pipeline {
    agent { label 'ec2-agent' }   // ברירת המחדל: הכל רץ על ה-EC2

    environment {
        IMAGE_NAME = "danielashkenazy1/cicd_k8s_python_app"
        KUBECONFIG = "/home/ubuntu/.kube/config"
    }

    stages {

        stage('Checkout') {
            steps { checkout scm }
        }

        // -------------------------------
        // שלבים שרצים בתוך POD (כלים)
        // -------------------------------
        stage('Secrets Detection') {
            agent { label 'tools-agent' }
            steps {
                sh '''
                trufflehog filesystem /scan/Docker --fail || true
                '''
            }
        }

        stage('Lint') {
            agent { label 'tools-agent' }
            steps {
                sh '''
                cd Docker
                python3 -m venv .venv
                . .venv/bin/activate
                pip install -r requirments.txt
                pip install flake8
                flake8 .
                '''
            }
        }

        stage('Security Scan (Bandit)') {
            agent { label 'tools-agent' }
            steps {
                sh '''
                cd Docker
                . .venv/bin/activate
                pip install bandit
                bandit -r . -ll --skip B104,B113
                '''
            }
        }

        stage('Unit Tests') {
            agent { label 'tools-agent' }
            steps {
                sh '''
                cd Docker
                . .venv/bin/activate
                pip install pytest pytest-cov
                pytest --cov=. --cov-report=html --cov-report=xml --junitxml=junit.xml
                '''
            }
            post {
                always {
                    junit 'Docker/junit.xml'
                    publishHTML([
                        reportDir: 'Docker/htmlcov',
                        reportFiles: 'index.html',
                        reportName: "Coverage Report"
                    ])
                }
            }
        }

        // -------------------------------
        // שלבים שרצים רק על ה־EC2
        // -------------------------------

        stage('Approve Deployment') {
            steps {
                script {
                    timeout(time: 10, unit: 'MINUTES') {
                        input message: "Deploy?", ok: "YES"
                    }
                }
            }
        }

        stage('Build & Push Docker Image') {
            steps {
                script {
                    def shortSha = sh(script: "git rev-parse --short HEAD", returnStdout: true).trim()

                    withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                        sh """
                        cd Docker
                        echo "$DOCKER_PASS" | docker login -u "$DOCKER_USER" --password-stdin
                        docker build -t $IMAGE_NAME:ci-${shortSha} .
                        docker push $IMAGE_NAME:ci-${shortSha}
                        """
                    }

                    env.IMAGE_TAG = "ci-${shortSha}"
                }
            }
        }

        stage('Create Docker Pull Secret in K8s') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
                    sh '''
                    kubectl delete secret regcred -n devops --ignore-not-found=true

                    kubectl create secret docker-registry regcred \
                        --docker-server=https://index.docker.io/v1/ \
                        --docker-username=$DOCKER_USER \
                        --docker-password=$DOCKER_PASS \
                        -n devops
                    '''
                }
            }
        }

        stage('Deploy to Kubernetes (Helm)') {
            steps {
                sh """
                helm upgrade --install python-app ./Helm \
                    --namespace devops \
                    --set image.tag=${IMAGE_TAG}
                """
            }
        }
    }
}
